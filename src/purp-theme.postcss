:root {
    /* =~= Theme Properties =~= */
    --theme-font-family-base: system-ui;
    --theme-font-family-heading: system-ui;
    --theme-font-color-base: 0 0 0;
    --theme-font-color-dark: 255 255 255;
    --theme-rounded-base: 9999px;
    --theme-rounded-container: 8px;
    --theme-border-base: 1px;
    /* =~= Theme On-X Colors =~= */
    --on-primary: 255 255 255;
    --on-secondary: 0 0 0;
    --on-tertiary: 0 0 0;
    --on-success: 0 0 0;
    --on-warning: 255 255 255;
    --on-error: 0 0 0;
    --on-surface: 255 255 255;
    /* =~= Theme Colors  =~= */
    /* primary | #8615c9 */
	--color-primary-50: 237 220 247; /* ⬅ #eddcf7 */
	--color-primary-100: 231 208 244; /* ⬅ #e7d0f4 */
	--color-primary-200: 225 197 242; /* ⬅ #e1c5f2 */
	--color-primary-300: 207 161 233; /* ⬅ #cfa1e9 */
	--color-primary-400: 170 91 217; /* ⬅ #aa5bd9 */
	--color-primary-500: 134 21 201; /* ⬅ #8615c9 */
	--color-primary-600: 121 19 181; /* ⬅ #7913b5 */
	--color-primary-700: 101 16 151; /* ⬅ #651097 */
	--color-primary-800: 80 13 121; /* ⬅ #500d79 */
	--color-primary-900: 66 10 98; /* ⬅ #420a62 */
	/* secondary | #52e195 */
	--color-secondary-50: 229 251 239; /* ⬅ #e5fbef */
	--color-secondary-100: 220 249 234; /* ⬅ #dcf9ea */
	--color-secondary-200: 212 248 229; /* ⬅ #d4f8e5 */
	--color-secondary-300: 186 243 213; /* ⬅ #baf3d5 */
	--color-secondary-400: 134 234 181; /* ⬅ #86eab5 */
	--color-secondary-500: 82 225 149; /* ⬅ #52e195 */
	--color-secondary-600: 74 203 134; /* ⬅ #4acb86 */
	--color-secondary-700: 62 169 112; /* ⬅ #3ea970 */
	--color-secondary-800: 49 135 89; /* ⬅ #318759 */
	--color-secondary-900: 40 110 73; /* ⬅ #286e49 */
	/* tertiary | #b196c2 */
	--color-tertiary-50: 243 239 246; /* ⬅ #f3eff6 */
	--color-tertiary-100: 239 234 243; /* ⬅ #efeaf3 */
	--color-tertiary-200: 236 229 240; /* ⬅ #ece5f0 */
	--color-tertiary-300: 224 213 231; /* ⬅ #e0d5e7 */
	--color-tertiary-400: 200 182 212; /* ⬅ #c8b6d4 */
	--color-tertiary-500: 177 150 194; /* ⬅ #b196c2 */
	--color-tertiary-600: 159 135 175; /* ⬅ #9f87af */
	--color-tertiary-700: 133 113 146; /* ⬅ #857192 */
	--color-tertiary-800: 106 90 116; /* ⬅ #6a5a74 */
	--color-tertiary-900: 87 74 95; /* ⬅ #574a5f */
	/* success | #35fd71 */
	--color-success-50: 225 255 234; /* ⬅ #e1ffea */
	--color-success-100: 215 255 227; /* ⬅ #d7ffe3 */
	--color-success-200: 205 255 220; /* ⬅ #cdffdc */
	--color-success-300: 174 254 198; /* ⬅ #aefec6 */
	--color-success-400: 114 254 156; /* ⬅ #72fe9c */
	--color-success-500: 53 253 113; /* ⬅ #35fd71 */
	--color-success-600: 48 228 102; /* ⬅ #30e466 */
	--color-success-700: 40 190 85; /* ⬅ #28be55 */
	--color-success-800: 32 152 68; /* ⬅ #209844 */
	--color-success-900: 26 124 55; /* ⬅ #1a7c37 */
	/* warning | #d156a7 */
	--color-warning-50: 248 230 242; /* ⬅ #f8e6f2 */
	--color-warning-100: 246 221 237; /* ⬅ #f6dded */
