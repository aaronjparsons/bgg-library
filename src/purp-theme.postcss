	--color-error-50: 242 238 242; /* ⬅ #f2eef2 */
	--color-error-100: 237 232 238; /* ⬅ #ede8ee */
	--color-error-200: 233 226 234; /* ⬅ #e9e2ea */
	--color-error-300: 219 209 221; /* ⬅ #dbd1dd */
	--color-error-400: 193 175 195; /* ⬅ #c1afc3 */
